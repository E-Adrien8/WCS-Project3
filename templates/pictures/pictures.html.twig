{% extends 'base.html.twig' %}

{% block title %}Ajouter un restaurant - Copains de Resto{% endblock %}

{% block body %}
    <section class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-6 mx-3">GÃ©rer les photos</h1>
            <button type="button" class="btn btn-light" onclick="history.back()">Retour</button>
        </div>
        <hr>
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
                {% for picture in pictures %}
                    <div class="col mt-3">
                        <img src="{{ asset('uploads/pictures/'~picture.picture) }}" class="img-fluid"
                             alt="{{ picture.picture }}"
                             style="width: 30rem; min-height: 18rem; object-fit: cover; object-position: 50% 0;">
                        <a href="{{ path('app_restaurant_delete_pictures', {'id': picture.id}) }}"
                           class="btn btn-danger mt-2 mb-4">Supprimer</a>
                    </div>
                {% endfor %}
            </div>

            <h1 class="display-6 mx-3 my-lg-4">Ajouter des photos</h1>
            <hr>

            <div>
                {{ form_start(form) }}
                {{ form_row(form.picture) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
