{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

    <section class="py-5">
        <div class="card col-lg-6 mx-auto">
            <h5 class="card-header text-center" style="background-color: #f7cb0c;">Mon Compte</h5>
            <div class="card-body">
                <h6 class="text-center">Mes informations personnelles</h6>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Pr√©nom :</strong> {{ user.firstname }}</li>
                                <li class="list-group-item"></li>
                            </ul>
                        </div>
                        <div class="col">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Nom :</strong> {{ user.lastname }}</li>
                                <li class="list-group-item"></li>
                            </ul>
                        </div>
                        <div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Email :</strong> {{ user.email }}</li>
                                <li class="list-group-item"><strong>Anniversaire
                                        :</strong> {{ user.birthdate|date("d/m/Y") }}</li>
                                <li class="list-group-item"><strong>Ville :</strong>
                                    {% if user.city is not null %}
                                        {{ user.city }}
                                    {% else %}

                                    {% endif %}</li>
                                <li class="list-group-item"></li>
                            </ul>
                        </div>
                        <div class="btn-sm mx-auto d-flex flex-row-reverse mb-5 mt-4">
                            <div class="me-4">
                                <a href="{{ path('app_user_password_update') }}" class="btn btn-warning">Modifier mot de passe</a>
                            </div>
                            <div class="me-4">
                                <a href="{{ path('app_user_compte_update') }}" class="btn btn-warning">Modifier Compte</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
