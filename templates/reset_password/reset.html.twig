{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<section class="m-5 py-5">
    <div class="card col-lg-6 mx-auto">
        <h5 class="card-header text-center">Réinitialisez votre mot de passe</h5>
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col">
                        {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <div class="mb-4 mt-3 pt-3 text-center">
                        <button class="btn btn-dark">Réinitialiser mot de passe</button>
                        </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
