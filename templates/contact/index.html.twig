{% extends 'base.html.twig' %}

{% block title %}Nous contacter - Copains de Resto{% endblock %}

{% block body %}
    <div>
    {{ form_start(form) }}

    <div class="container-fluid p-4">
        <h1>Contactez-nous</h1>
        <hr>
        <br>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        {{ form_row(form.firstname) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                        <div class="col-md-6">
                            {{ form_row(form.message) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
