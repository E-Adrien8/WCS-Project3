{% extends 'base.html.twig' %}

{% block title %}Ajouter un restaurant - Copains de Resto{% endblock %}

{% block body %}
    <section class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-6 mx-3">Ajouter un restaurant</h1>
            <button type="button" class="btn btn-light" onclick="history.back()">Retour</button>
        </div>
        <hr>
            <div class="py-5">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.name) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div> {{ form_row(form.address) }} </div>
                        <div> {{ form_row(form.zipCode) }} </div>
                        <div> {{ form_row(form.city) }} </div>
                        <div> {{ form_row(form.email) }} </div>
                        <div> {{ form_row(form.phoneNumber) }} </div>
                        <div> {{ form_row(form.zone) }} </div>
                    </div>
                    <div class="col-4">
                        <div class="map" id="gmp-map"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.foodType) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.chefName) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.description) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.menuText) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.menuPdf) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.averagePrice) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.mainPicture) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.websiteLink) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.facebookLink) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.instagramLink) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.tripadvisorLink) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.siret) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.vat) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.billingAddress) }}</div>
                </div>
                {{ form_end(form) }}
    </section>
{% endblock %}

{% block additionnal_js %}
{% endblock %}
