{% extends 'base.html.twig' %}

{% block title %}Mon compte restaurateur{% endblock %}

{% block body %}

    <section class="py-5">
        <div class="card col-lg-6 mx-auto">
            <h5 class="card-header text-center" style="background-color: #f7cb0c;">Mon Compte</h5>
            <div class="card-body">
                <h6 class="text-center">Mes informations personnelles</h6>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Prénom :</strong> {{ restorer.firstname }}</li>
                                <li class="list-group-item"><strong>Nom :</strong> {{ restorer.lastname }}</li>
                                <li class="list-group-item"></li>
                            </ul>
                        </div>
                        <div class="col">

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Email :</strong> {{ restorer.email }}</li>
                                <li class="list-group-item"><strong>Téléphone :</strong>
                                    {% if restorer.phonenumber is not null %}
                                        {{ restorer.phonenumber }}
                                    {% endif %}</li>
                                <li class="list-group-item"></li>
                            </ul>
                        </div>
                        <div class="btn-sm d-flex justify-content-between">
                            <a href="{{ asset('documents/CGU_du_site_restaurateurs.pdf')}}" target="_blank" class="btn btn-dark">Télécharger les CGU</a>
                            <a href="{{ path('app_restorer_compte_update') }}" class="btn btn-warning">Modifier Compte</a>
                            <a href="{{ path('app_restorer_password_update') }}" class="btn btn-warning">Modifier mot de passe</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
